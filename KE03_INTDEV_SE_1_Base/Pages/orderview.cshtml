@page
@model OrderviewModel
@{
	ViewData["Title"] = "Bestellingen";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
	<thead>
		<tr>
			<th>bestel ID</th>
			<th>bestel datum</th>
			<th>klant Name</th>
			<th>bestelde producten</th>
			<th>hoeveelheid</th>
			<th>bezorgoptie</th>
			<th>prijs</th>
			<th>is bezorgd</th>
		</tr>
</thead>
	@foreach (var order in Model.Orders)
	{
		<tr>
			<td>@Html.DisplayName(order.Id.ToString())</td>
			<td>@Html.DisplayName(order.OrderDate.ToString())</td>
			<td>@Html.DisplayName(order.Customer.Name.ToString())</td>
			<td>
				@foreach (var orderProduct in order.OrderProducts)
				{
					@Html.DisplayName(orderProduct.Product.Name)
					<br />
				}
			</td>
			<td>
				@foreach (var orderProduct in order.OrderProducts)
				{
					@Html.DisplayName(orderProduct.Amount.ToString())
					<br />
				}
			</td>
			<td>
				@order.DeliveryOption.ToString()
			</td>
			<td>
				@order.totalPrice.ToString("N2", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-")
			<td>
				@order.Isdelivered.ToString()
			</td>
		</tr>
	}

</table>

