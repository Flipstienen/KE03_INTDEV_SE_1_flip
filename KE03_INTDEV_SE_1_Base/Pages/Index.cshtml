@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div style="text-align: center">
    <h1 style="font-family: 'Bell MT'; font-size:125px">MATRIX INC</h1>
    <div>
        <button class="btn bg-secondary text-white mb-3 me-3" style="width: 400px; padding: 3rem 4rem" onclick="window.location.href='/filter'">Categorieën</button>
        <button class="btn bg-secondary text-white mb-3 me-3" style="width: 400px; padding: 3rem 4rem" onclick="window.location.href='/about'">About</button>
</div>
    </div>
<div class="container mt-4" style="text-align: center">
	<h2>Meest poppulaire categorieën</h2>
	<p>Hieronder vind je de meest populaire categorieën van dit moment.</p>
</div>    
<div style="text-align: center">

@foreach(var item in Model.MostSoldProducts){
            <button class="btn btn-secondary mb-3 me-3" style="margin-right: 100px; width: 200px; height: 150px; padding: 3rem 4rem" onclick="window.location.href='/producten?selectedFilter=@item.characteristic'">@item.characteristic</button>
}
</div>
